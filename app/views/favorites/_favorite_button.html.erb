<% unless current_user == @user %>
  <% if current_user.favorite?(micropost) %>
    <%= form_for(current_micropost.favorites.find_by(user_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :user_id, micropost.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_micropost.favorites.build) do |f| %>
      <%= hidden_field_tag :user_id, micropost.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>