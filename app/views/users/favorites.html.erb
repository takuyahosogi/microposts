<div class="row">
  <aside class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @micropost.name %></h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@micropost, { size: 500 }) %>" alt="">
      </div>
    </div>
    <%= render 'relationships/favorite_button', user: @micropost %>
  </aside>
  <div class="col-xs-8">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if current_page?(user_path(@micropost)) %>"><%= link_to micropost_path(@micropost) do %>Microposts <span class="badge"><%= @count_microposts %></span><% end %></li>
      <li class="<%= 'active' if current_page?(favorites_micropost_path(@micropost)) %>"><%= link_to favorites_micropost_paths(@micropost) do %>Favorites <span class="badge"><%= @count_favorite %></span><% end %></li>
      <li class="<%= 'active' if current_page?(favorites_micropost_path(@micropost)) %>"><%= link_to favorites_micropost_paths_user_path(@micropost) do %>Favorites <span class="badge"><%= @count_favorites %></span><% end %></li>
    </ul>
    <%= render 'microposts', microposts: @favorites %>
  </div>
</div>